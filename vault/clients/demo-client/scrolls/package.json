{
  "name": "vauntico-webhook-security",
  "version": "1.0.0",
  "description": "Production-ready webhook validation system with HMAC-SHA256 signature verification and replay attack prevention",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
